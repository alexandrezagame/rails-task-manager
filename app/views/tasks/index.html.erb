<h1>My Tasks</h1>


<div class="flex-box">
    <% @tasks.each do |task| %>
    <%= link_to  task_path(task) do %>
    <div class="task">
    <h2> <%= task.title %></h2>
    <p>
    <%= task.details  %>
    <%= task.completed? ? '[X]' : '[ ]' %>
    </p>
    </div>
    <% end %>
    <% end %>
</div>


<%= link_to "create", new_task_path %>
